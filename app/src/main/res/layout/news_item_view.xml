<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/bg_layout_round"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/newsIconCardView"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/newsIcon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/image_holder"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_50sdp"
                 />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/newsTitle"
            android:ellipsize="marquee"
            android:text="this is a great news heading"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/newsIconCardView"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/dp4"
            android:textSize="@dimen/_14sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#212121"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/newsIconCardView" />
    </RelativeLayout>
</RelativeLayout>