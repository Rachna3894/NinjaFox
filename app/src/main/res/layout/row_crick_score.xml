<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_marginRight="@dimen/layout_margin_4dp"
    android:layout_marginLeft="@dimen/layout_margin_4dp"
    android:background="@drawable/bg_layout_round_score"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/dp4"
        android:textSize="@dimen/sp16"
        android:id="@+id/note"
        android:layout_gravity="center"
        android:textColor="#212121"
        android:text="@null"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="@dimen/dp4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cFlag1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/flag_ic_default"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/team1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/cFlag1"
            android:layout_marginRight="@dimen/dp4"
            android:text="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/team1Score"
            android:textSize="@dimen/sp16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="#212121"
            android:layout_toRightOf="@+id/team1Name"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginBottom="@dimen/dp4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cFlag2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/flag_ic_default"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/team2Name"
            android:text="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/cFlag2"
            android:layout_marginRight="@dimen/dp4"
            android:textColor="#212121"
            android:textSize="@dimen/sp16"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10" />

        <TextView
            android:id="@+id/team2Score"
            android:layout_toRightOf="@+id/team2Name"
            android:textSize="@dimen/sp16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>