<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="3"
    android:background="@drawable/sale_bk_product_list"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        app:cardElevation="@dimen/padding_4dp"
        app:cardBackgroundColor="@color/clear_all_back_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:background="@drawable/ripple"
            android:id="@+id/backButton"
            android:padding="@dimen/layout_margin_2dp"
            android:gravity="left"
            android:layout_gravity="left|center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:id="@+id/title_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/menu_new_most_visited"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"

                android:src="@drawable/sales_power_mantra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>

        </android.support.v7.widget.CardView
            >

        <!--<Button
            android:textAllCaps="false"
            android:padding="@dimen/_7sdp"
            android:background="@drawable/button_buy_now"
            android:elevation="@dimen/_15sdp"
            android:textSize="@dimen/sp18"
            android:text="Buy now"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>-->

        <TextView
            android:id="@+id/buyP1"
            android:elevation="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_4sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/button_buy_now"
            android:text="  Buy now  "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/sales_hair_mantra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>

        </android.support.v7.widget.CardView
            >

        <TextView
            android:id="@+id/buyP2"
            android:elevation="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_4sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/button_buy_now"
            android:text="  Buy now  "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/sales_slim_mantra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>

        </android.support.v7.widget.CardView
            >

        <TextView
            android:id="@+id/buyP3"
            android:elevation="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_4sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/button_buy_now"
            android:text="  Buy now  "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


    </FrameLayout>

</LinearLayout>