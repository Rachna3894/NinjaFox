<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="6"
    android:orientation="vertical"
    android:background="@color/sign_in_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        app:cardElevation="@dimen/padding_4dp"
        app:cardBackgroundColor="@color/clear_all_back_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:background="@drawable/ripple"
            android:id="@+id/backButton"
            android:padding="@dimen/layout_margin_2dp"
            android:gravity="left"
            android:layout_gravity="left|center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:id="@+id/title_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/menu_new_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_weight="1.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/signin_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </FrameLayout>

        <ImageView
            android:background="@drawable/img_border"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_round"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="3.7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgIcon"
            android:layout_marginTop="-30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher_round"
            android:layout_width="@dimen/layout_height_60dp"
            android:layout_height="@dimen/layout_height_60dp"></ImageView>

        <LinearLayout
            android:layout_below="@+id/imgIcon"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_marginTop="@dimen/dp2"
                android:hint="@string/hint_user_name_email"
                android:id="@+id/edit_email"
                android:inputType="text"
                android:padding="@dimen/dp10"
                android:background="@drawable/layout_border"
                android:imeOptions="actionNext"
                android:theme="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </EditText>
            <TextView
                android:padding="@dimen/_3sdp"
                android:text="OR"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <EditText
                android:hint="@string/hint_user_name_mobile"
                android:id="@+id/edit_mobile"
                android:inputType="number"
                android:padding="@dimen/dp10"
                android:background="@drawable/layout_border"
                android:imeOptions="actionNext"
                android:theme="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </EditText>

            <EditText
                android:layout_marginTop="@dimen/dp10"
                android:hint="@string/dialog_sign_in_password"
                android:inputType="textPassword"
                android:id="@+id/edit_password"
                android:padding="@dimen/dp10"
                android:background="@drawable/layout_border"
                android:theme="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></EditText>

            <Button
                android:id="@+id/login_button"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:background="@drawable/sign_in_button_background"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"/>

            <TextView
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/custom_ripple"
                android:id="@+id/signUp"
                android:textAllCaps="true"
                android:text="@string/signup"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:padding="@dimen/dp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/custom_ripple"
                android:id="@+id/orTxt"
                android:text="or"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:padding="@dimen/dp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/custom_ripple"
                android:textColor="@color/black"
                android:id="@+id/forgotPassword"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp14"
                android:textAllCaps="true"
                android:text="@string/forgot_password"
                android:padding="@dimen/dp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--default button from google-->
            <!-- <com.google.android.gms.common.SignInButton
                android:layout_marginTop="@dimen/dp10"
                android:visibility="gone"
                android:id="@+id/sign_in_button1"
                android:gravity="center_vertical|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />-->

            <android.support.v7.widget.CardView
                android:id="@+id/sign_in_button"
                android:layout_marginTop="@dimen/dp5"
                app:cardCornerRadius="@dimen/dp6"
                app:cardElevation="@dimen/dp2"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp">
                <RelativeLayout
                    android:background="@drawable/custom_ripple"
                    android:padding="@dimen/dp12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/gimg"
                        android:src="@drawable/ic_google"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_toRightOf="@+id/gimg"
                        android:textSize="@dimen/sp16"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginLeft="@dimen/dp4"
                        android:id="@+id/gmailLoginTxt"
                        android:textColor="@color/black"
                        android:text="@string/sign_up_with_google"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_weight=".6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:background="@drawable/signin_bottom"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>
    </RelativeLayout>
</LinearLayout>